    <div id="Main" class="d-flex container" style="background-color: #DEF2F1;">
        <div id="header">
            <p id="profileHeader"><strong>My account</strong></p>
        </div>
        <div id="innerDiv" class="d-flex container">
            <div id="innerBox" class="d-flex container">
                <div class="d-flex statusDiv">
                    <div style="align-self:center;height:40px">
                        <p class="statusLabel"><strong>Status:</strong></p>
                    </div>
                    <div style="align-self:center;height:40px">
                        
                        <p class="statusTxt">{{status}}</p>
                    </div>
                </div>

                <form method="POST" action="../users/editUn">
                    <div class="d-flex statusDiv">
                        <div style="align-self:center;height:40px">
                            <p class="statusLabel"><strong>Username:</strong></p>
                        </div>
                        <div style="align-self:center;height:29px;padding-right:28px">
                            <input name="un" id="unTxt" type="text" style="border: none;font-size:22px" value="{{username}}">
                        </div>
                        <input class="btn btn-primary statusEditBtn" type="submit" value="Edit">
                    </div>
                </form>
                
                
                <form method="POST" action="../users/editPw">
                    <div class="d-flex statusDiv">
                        <div style="align-self:center;height:40px">
                            <p class="statusLabel"><strong>Password:</strong></p>
                        </div>
                        <div style="align-self:center;height:29px;padding-right:32px">
                            <input name="pw" id="unTxt" type="text" style="border: none;font-size:22px" value="{{password}}">
                        </div>
                        <input class="btn btn-primary statusEditBtn" type="submit" value="Edit">
                    </div>
                </form>
                
                <form method="POST" action="../users/editEm">
                    <div class="d-flex statusDiv">
                        <div style="align-self:center;height:40px">
                            <p class="statusLabel"><strong>Email:</strong></p>
                        </div>
                        <div style="align-self:center;height:29px">
                                <input name="em" id="unTxt2" type="text" style="border: none;font-size:22px" value="{{email}}">
                        </div>
                        <input class="btn btn-primary statusEditBtn" type="submit" value="Edit">
                    </div>
                </form>
                
            </div>
            <picture><img src="/assets/images/navigate%20map.png" style="height: 300px; width: 300px"></picture>
        </div>
    </div>
    <div id="footer" class="d-flex jumbotron" style="background-color: #17252a; height: 145px">
